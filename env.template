# AI Educational Assistant - Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# API KEYS
# =============================================================================

# Google Gemini API Key (Required)
# Get your key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Model Configuration
MODEL_NAME=models/gemini-1.5-pro
MODEL_TEMPERATURE=0.7
MAX_OUTPUT_TOKENS=8192

# File Upload Limits (in MB)
MAX_FILE_SIZE=200

# Processing Settings
OCR_LANGUAGE=ara+eng
DEFAULT_LANGUAGE=en

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/Disable Features
ENABLE_DOCUMENT_CHAT=true
ENABLE_QUIZ_GENERATOR=true
ENABLE_VIDEO_ANALYZER=true
ENABLE_AI_ASSISTANT=true
ENABLE_FLASHCARD_CREATOR=true
ENABLE_VOICE_ASSISTANT=true
ENABLE_IMAGE_ANALYZER=true

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Cache Settings
ENABLE_CACHING=true
CACHE_TTL=3600

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
MAX_TOKENS_PER_REQUEST=8192

# =============================================================================
# UI CUSTOMIZATION
# =============================================================================

# Application Info
APP_TITLE=AI Educational Assistant
APP_ICON=ðŸŽ“
PAGE_LAYOUT=wide

# Theme
PRIMARY_COLOR=#3B82F6
SECONDARY_COLOR=#1E40AF
BACKGROUND_COLOR=#F8FAFC

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Enable authentication (future feature)
ENABLE_AUTH=false

# Session timeout (in minutes)
SESSION_TIMEOUT=60

# =============================================================================
# LOGGING
# =============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log File Path
LOG_FILE=app.log

# =============================================================================
# NOTES
# =============================================================================

# 1. Never commit this file with actual secrets to version control
# 2. Add .env to your .gitignore file
# 3. Use environment-specific files (.env.dev, .env.prod)
# 4. Rotate API keys regularly
# 5. Monitor usage to avoid quota limits
